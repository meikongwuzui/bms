doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title 登陆-蓝剑图书馆
    meta(name='description', content='蓝剑图书馆')
    meta(name='keywords', content='index')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='renderer', content='webkit')
    meta(http-equiv='Cache-Control', content='no-siteapp')
    link(rel='icon', type='image/png', href='assets/i/favicon.png')
    link(rel='apple-touch-icon-precomposed', href='assets/i/app-icon72x72@2x.png')
    meta(name='apple-mobile-web-app-title', content='Amaze UI')
    link(rel='stylesheet', href='assets/css/amazeui.min.css')
    link(rel='stylesheet', href='assets/css/amazeui.datatables.min.css')
    link(rel='stylesheet', href='assets/css/app.css')
    script(src='assets/js/jquery.min.js')
  body(data-type='login')
    script(src='assets/js/theme.js')
    .am-g.tpl-g
      // 风格切换
      .tpl-skiner
        .tpl-skiner-toggle.am-icon-cog
        .tpl-skiner-content
          .tpl-skiner-content-title
            | 选择主题
          .tpl-skiner-content-bar
            span.skiner-color.skiner-white(data-color='theme-white')
            span.skiner-color.skiner-black(data-color='theme-black')
      .tpl-login
        .tpl-login-content
          .tpl-login-logo
          form#form-loginfo.am-form.tpl-form-line-form
            .am-form-group
              input#user-name.tpl-form-input(type='text', name='username', minlength='2', required='', placeholder='请输入账号')
            .am-form-group
              input#user-name.tpl-form-input(type='password', name='userpwd', minlength='6', required='', placeholder='请输入密码')
            .am-form-group.tpl-login-remember-me
              input#remember-me(type='checkbox')
              label(for='remember-me') 记住密码
            .am-form-group
              button#btnlogin.am-btn.am-btn-primary.am-btn-block.tpl-btn-bg-color-success.tpl-login-btn(type='button') 登陆
    script(src='assets/js/amazeui.min.js')
    script(src='assets/js/app.js')
    script(src='assets/js/user.js')
