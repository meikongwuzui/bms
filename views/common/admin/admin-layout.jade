doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		title 首页-蓝剑图书馆
		meta(name='description', content='蓝剑图书馆')
		meta(name='keywords', content='蓝剑图书馆')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		meta(name='renderer', content='webkit')
		meta(http-equiv='Cache-Control', content='no-siteapp')
		link(rel='icon', type='image/png', href='assets/i/favicon.png')
		link(rel='apple-touch-icon-precomposed', href='assets/i/app-icon72x72@2x.png')
		meta(name='apple-mobile-web-app-title', content='Amaze UI')
		script(src='assets/js/echarts.min.js')
		link(rel='stylesheet', href='assets/css/amazeui.min.css')
		link(rel='stylesheet', href='assets/css/amazeui.datatables.min.css')
		link(rel='stylesheet', href='assets/css/app.css')
		script(src='assets/js/jquery.min.js')
	body(data-type='#{datatype}')
		script(src='assets/js/theme.js')
		.am-g.tpl-g
			// 头部
			include admin-header 
			// 风格切换
			.tpl-skiner
				.tpl-skiner-toggle.am-icon-cog
				.tpl-skiner-content
					.tpl-skiner-content-title
						| 选择主题
					.tpl-skiner-content-bar
						span.skiner-color.skiner-white(data-color='theme-white')
						span.skiner-color.skiner-black(data-color='theme-black')
			// 侧边导航栏
			.left-sidebar
				// 用户信息
				.tpl-sidebar-user-panel
					.tpl-user-panel-slide-toggleable
						.tpl-user-panel-profile-picture
							img(src='assets/img/user04.png', alt='')
						span.user-panel-logged-in-text
							i.am-icon-circle-o.am-text-success.tpl-user-panel-status-icon
							span.u-nickname
						a.tpl-user-panel-action-link(href='javascript:;')
							span.am-icon-pencil
							|  账号设置
				// 菜单
				ul.sidebar-nav
					li.sidebar-nav-heading
						| Components 
						span.sidebar-nav-heading-info  附加组件
					li.sidebar-nav-link
						a.active(href='index.html')
							i.am-icon-home.sidebar-nav-link-logo
							|  首页
					li.sidebar-nav-link
						a(href='tables.html')
							i.am-icon-table.sidebar-nav-link-logo
							|  表格
					li.sidebar-nav-link
						a(href='calendar.html')
							i.am-icon-calendar.sidebar-nav-link-logo
							|  日历
					li.sidebar-nav-link
						a(href='form.html')
							i.am-icon-wpforms.sidebar-nav-link-logo
							|  表单
					li.sidebar-nav-link
						a(href='chart.html')
							i.am-icon-bar-chart.sidebar-nav-link-logo
							|  图表
					li.sidebar-nav-heading
						| Page
						span.sidebar-nav-heading-info  常用页面
					li.sidebar-nav-link
						a.sidebar-nav-sub-title(href='javascript:;')
							i.am-icon-table.sidebar-nav-link-logo
							|  数据列表
							span.am-icon-chevron-down.am-fr.am-margin-right-sm.sidebar-nav-sub-ico
						ul.sidebar-nav.sidebar-nav-sub
							li.sidebar-nav-link
								a(href='table-list.html')
									span.am-icon-angle-right.sidebar-nav-link-logo
									|  文字列表
							li.sidebar-nav-link
								a(href='table-list-img.html')
									span.am-icon-angle-right.sidebar-nav-link-logo
									|  图文列表
			// 内容区域
			.tpl-content-wrapper
				block content
		script(src='assets/js/amazeui.min.js')
		script(src='assets/js/amazeui.datatables.min.js')
		script(src='assets/js/dataTables.responsive.min.js')
		script(src='assets/js/app.js')
		script(src='assets/js/user.js')